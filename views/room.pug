extends includes/base

block extraStyles
  script(src='/assets/js/dist/socket.io.js')

block content
  body(data-roomSlug=roomSlug)
    #particles-js.particles-js
    #pageTransition.page-transition
    section#section-lobby.room-section.lobby-section(class=status === "waiting" ? "" : "is-hidden")
      .wrapper
        include includes/sqsq-logo.pug

        h3.rooms-list__title Room: !{roomName}
        ul.players-list.players.no-score
        div#admin-section(style="visibility: hidden;")
          h4 Rounds number
          p
            input#rounds-number(type="number" value="3" min="1" max="100")

          h4 Obstacles speed 
          p Slow
            input#obstacles-speed(type="range" min="1" max="30" value="10")
            | fast

          h4 Bonus frequency
          p No bonus
            input#bonus-frequency(type="range" min="1" max="10" value="5")
            | Too many bonus

          a#startButton.btn(href='#') play
        a.btn(href='/') back
    section#section-play.room-section.play-section(class=status === "playing" ? "" : "is-hidden")
      div.play-section__wrapper
        aside.play-section__aside
          include includes/sqsq-logo.pug

          div.play-section__infos
            h3.rooms-list__title Room: !{roomName}
            h4#round-number
            ul.players-list.players
            h1#points-text
        div.play-section__canvas
          h1#countdown-text.play-section__countdown
          canvas#gameCanvas(width='700' height='700')
    section#section-ranking.room-section.ranking-section(class=status === "end-round" ? "" : "is-hidden")
      .wrapper
        include includes/sqsq-logo.pug

        .text-center
          h3.rooms-list__title Room: !{roomName}

        table#winner-announcement.winner-annoucement

        h3 Round results
        ul#round-rank-list.players-list

        h3 Global ranking
        ul#rank-list.players-list
        button#back-button.btn Back

block extraScripts
  script(src='/assets/js/main.js')
  script(src=gameJS)
  script(src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.js")
  script(src="/assets/js/particles.js")
