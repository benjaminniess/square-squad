doctype html
html(lang='fr')
    block vars
        - var pageTitle='Square Squad Reloaded'
    head
        block title
            title #{pageTitle}
        block styles
            link(rel='stylesheet', href='/assets/css/dist/uikit/uikit.min.css')
            link(rel='stylesheet', href='/assets/css/main.css')
        block scripts
            script(src='/assets/js/dist/uikit/uikit.min.js')
            script(src='/assets/js/dist/uikit/uikit-icons.min.js')

        link(rel='apple-touch-icon' sizes='180x180' href='/assets/images/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='/assets/images/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='/assets/images/favicon-16x16.png')
        link(rel='mask-icon' href='/assets/images/safari-pinned-tab.svg' color='#1e9294')
        meta(name='msapplication-TileColor' content='#1e9294')
        meta(name='theme-color' content='#1e9294')
    block bodyClass
        - var bodyClass = ''

    body(class=bodyClass)
        block content

        block footer
            footer.uk-section
                div.uk-container.uk-container-small
                    p.uk-text-center Version #{appVersion}
                        a(href='https://discord.com/channels/834826491602403409/834827272434221146' target="_blank")
                            img(src='/assets/images/discord.png' width="32px")
